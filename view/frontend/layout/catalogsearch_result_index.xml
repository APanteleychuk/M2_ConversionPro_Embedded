<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="search_result_list">
            <container name="search_result_list.additional" as="additional">
                <block class="Celebros\ConversionPro\Block\Catalog\Product\ProductList\RecommendedMessage" name="search_result_list.celebros_recommended" template="catalog/product/list/recommended_message.phtml" cacheable="false" />
                <block class="Celebros\ConversionPro\Block\Catalog\Product\ProductList\Banner" name="search_result_list.celebros_banner" template="catalog/product/list/banner.phtml" cacheable="false" />
            </container>
        </referenceBlock>
        <referenceBlock name="product_list_toolbar">
            <remove name="product_list_toolbar_pager" />
            <block class="Celebros\ConversionPro\Block\CatalogSearch\Product\ProductList\Toolbar\Pager" name="product_list_toolbar_pager_celebros" as="product_list_toolbar_pager" cacheable="false"/>
        </referenceBlock>
        <referenceBlock name="catalogsearch.navigation.renderer">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Celebros_ConversionPro::layered_navigation/layer/filter.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="content">
            <block class="Celebros\ConversionPro\Block\Analytics\View" name="catalogsearch_celebros_analytics" template="analytics/tracking.search.phtml" cacheable="false" />
            <block class="Magento\Framework\View\Element\Template" name="conversionpro.js" before="-" template="Celebros_ConversionPro::catalog/js.phtml" />
        </referenceBlock>
    </body>
</page>